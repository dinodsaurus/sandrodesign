.slider
  position:absolute
  top:0
  left:0
  width: 100%
  height: 100%
  .dir
    position: absolute
    width: 50%
    height: 100%
    z-index: 10
    cursor: pointer
    &.left
      left:0
    &.right
      right: 0
  .item
    position:absolute
    top:0
    left:0
    width: 100%
    height: 100%
    background-size: cover
    transition:background .5s
    h3
      position:absolute
      left: 50px
      top: 120px
      width: 300px
