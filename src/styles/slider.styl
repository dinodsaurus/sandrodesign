@import "fonts.styl"
.slider
  position:absolute
  top:0
  left:0
  width: 100%
  height: 100%
  transition: top .3s
  font-size: 14px
  .dir
    position: absolute
    width: 30%
    height: 100%
    z-index: 10
    cursor: pointer
    &.left
      left:0
    &.right
      right: 0
  .item
    position:absolute
    top:0
    left:0
    width: 100%
    height: 100%
    background-size: cover
    background-position: center
    transition:background .5s
    h3
      position:absolute
      left: 50px
      bottom: 50px
      font-size:14px
      margin:0
      font-weight: normal
      @media screen and (max-width: 600px)
        left: 30px
.true
  .slider
    top:100%
