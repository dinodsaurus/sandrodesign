@import "fonts.styl"
.slider
  position:absolute
  top:0
  left:0
  width: 100%
  height: 100%
  transition: top .3s
  font-size: 14px
  .dir
    position: absolute
    width: 30%
    height: 100%
    z-index: 10
    cursor: pointer
    transition: opacity .3s
    background-size: auto 100%
    background: url("../icons/arrow.svg") no-repeat
    background-size: cover
    opacity: 0;
    &:hover
      opacity: 1
    &.left
      left:0
      transform: rotate(180deg);
      background-position: left center
    &.right
      right: 0
      background-position: right center
  .item
    position:absolute
    top:0
    left:0
    width: 100%
    height: 100%
    background-size: cover
    background-position: center
    transition:background .5s
    h3
      position:absolute
      left: 50px
      bottom: 50px
      font-size:14px
      margin:0
      font-weight: normal
      @media screen and (max-width: 600px)
        left: 30px
.true
  .slider
    top:100%
