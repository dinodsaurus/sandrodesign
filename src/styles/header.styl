@import 'colors.styl'
.header
  width: 100%
  position: absolute
  z-index: 100
  font-size:$fontsize
  color: $grey
  &.active
    h1, h2
      font-size:0
  h1
    font-size:$fontsize
    line-height:$fontsize
    font-weight: normal
    position:absolute
    top:30px
    left: 50px
    font-family: 'Moderat'
    color: transparent
    letter-spacing:1px
    margin:0
    &.second
      left: 115px;
      @media screen and (max-width: 600px)
        left: 95px
    &:first-letter
      font-size:$fontsize
    @media screen and (max-width: 600px)
      left: 30px
  h2
    font-size:$fontsize
    font-weight:normal
    position:absolute
    top:48px
    left: 75px
    margin: 0
    letter-spacing: 1px
    @media screen and (max-width: 600px)
      left: 55px
    &.second
      left: 136px
      @media screen and (max-width: 600px)
        left: 116px
    &:first-letter
      font-size:$fontsize
  .cont
    position:absolute
    right:50px
    top:30px
    cursor:pointer
    transition: color .3s
    @media screen and (max-width: 600px)
      right: 30px
    &:hover
      color:#ccc!important
